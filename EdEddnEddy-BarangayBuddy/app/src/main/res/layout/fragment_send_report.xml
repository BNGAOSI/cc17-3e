<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/divider_grey_2"
    tools:context="com.example.fulldashboardededdneddy.com.ambiongltb.fulldashboardededdneddy.SendReportFragment">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <TextView
            android:id="@+id/textView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/black"
            android:layout_marginTop="80dp"
            android:textSize="28sp"
            android:fontFamily="@font/montserratbold"
            android:gravity="center"
            android:textStyle="bold"
            android:text="Report"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:layout_width="300dp"
            android:layout_height="80dp"
            android:background="@drawable/custom_rounded_button"
            android:layout_marginTop="75dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/textView" />

        <Button
            android:id="@+id/btnInsertData"
            android:layout_width="300dp"
            android:layout_height="80dp"
            android:textAlignment="textStart"
            android:background="@drawable/custom_rounded_button"
            android:textColor="@color/divider_grey"
            android:backgroundTint="@color/white"
            android:fontFamily="@font/montserratregular"
            android:paddingLeft="30dp"
            android:textSize="20sp"
            android:text="File a Report"
            android:layout_marginTop="75dp"
            android:layout_marginLeft="15dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/textView" />

        <TextView
            android:layout_width="300dp"
            android:layout_height="80dp"
            android:background="@drawable/custom_rounded_button"
            android:layout_marginTop="25dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/btnInsertData" />

        <Button
            android:id="@+id/btnFetchData"
            android:layout_width="300dp"
            android:layout_height="80dp"
            android:textAlignment="textStart"
            android:background="@drawable/custom_rounded_button"
            android:textColor="@color/divider_grey"
            android:backgroundTint="@color/white"
            android:fontFamily="@font/montserratregular"
            android:paddingLeft="30dp"
            android:textSize="20sp"
            android:layout_marginTop="25dp"
            android:text="Report History"
            android:layout_marginLeft="15dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/btnInsertData" />

    </androidx.constraintlayout.widget.ConstraintLayout>

</FrameLayout>